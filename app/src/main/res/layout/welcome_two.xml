<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#63539C">

    <TextView
        android:id="@+id/screen2heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/roboto"
        android:text="Pin Important Messages"
        android:textColor="#FFFFFF"
        android:textSize="26sp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textColor="#FFFFFF"
        android:fontFamily="@font/roboto"
        android:layout_marginTop="8dp"
        android:layout_below="@+id/screen2heading"
        android:layout_centerHorizontal="true"
        android:foregroundGravity="center"
        android:gravity="center"
        android:text="Never miss any salient chat amidst pool of messages"/>
    <ImageView
        android:layout_width="200dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_height="400dp"
        android:layout_marginBottom="40dp"
        android:src="@drawable/welcometwo"/>

</RelativeLayout>